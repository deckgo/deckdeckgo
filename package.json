{
  "name": "deckdeckgo",
  "version": "4.10.0",
  "author": "David Dal Busco",
  "description": "The web open source editor for presentations",
  "private": true,
  "scripts": {
    "ic:install:data": "node canisters/scripts/ic.installcode.mjs",
    "ic:types": "node ./canisters/scripts/ic.types.js",
    "build": "npm run ic:types && cd studio && npm run build:ic",
    "postbuild": "prettier --write providers/ic"
  },
  "workspaces": [
    "providers/*",
    "webcomponents/*",
    "templates/*",
    "utils/*"
  ],
  "devDependencies": {
    "@stencil/core": "^2.14.0",
    "@stencil/postcss": "^2.1.0",
    "@stencil/sass": "^1.5.2",
    "@types/jest": "^26.0.24",
    "@types/puppeteer": "5.4.4",
    "autoprefixer": "^10.3.4",
    "esbuild": "^0.14.10",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-cli": "^27.4.7",
    "node-fetch": "^3.1.1",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "pretty-quick": "^3.1.3",
    "puppeteer": "^13.1.3",
    "typescript": "^4.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/deckgo/deckdeckgo.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@deckdeckgo/utils": "file:utils/utils"
  }
}

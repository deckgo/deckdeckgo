{
  "name": "deckdeckgo-studio",
  "version": "4.8.0",
  "author": "David Dal Busco",
  "description": "The web open source editor for presentations",
  "license": "AGPL-3.0-or-later",
  "files": [
    "dist/"
  ],
  "scripts": {
    "clean": "node ./scripts/rm-www.js",
    "i18n": "node ./scripts/i18n.types.js",
    "ic:types": "node ./scripts/i18n.types.js",
    "prebuild": "npm run clean && npm run i18n && npm run ic:types",
    "prestart": "npm run i18n && npm run ic:types",
    "build": "npm run build:ic",
    "build:prod": "stencil build",
    "build:staging": "npm run build:prod -- --staging",
    "build:ic": "npm run build:prod -- --ic",
    "postbuild": "./scripts/postbuild.js",
    "start": "stencil build --dev --watch --serve",
    "start:staging": "stencil build --dev --watch --serve --staging",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watch"
  },
  "dependencies": {
    "@deckdeckgo/deck-utils": "^4.0.2",
    "@deckdeckgo/utils": "^2.0.1",
    "@dfinity/agent": "^0.9.2",

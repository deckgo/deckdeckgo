    "@dfinity/identity": "^0.9.2",
    "@dfinity/principal": "^0.9.2",
    "firebase": "^8.6.3",
    "idb-keyval": "^5.0.6",
    "socket.io-client": "2.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@deckdeckgo/charts": "^2.1.0",
    "@deckdeckgo/color": "^4.1.0",
    "@deckdeckgo/core": "^8.2.1",
    "@deckdeckgo/demo": "^2.1.0",
    "@deckdeckgo/drag-resize-rotate": "^2.2.0",
    "@deckdeckgo/highlight-code": "^3.3.1",
    "@deckdeckgo/inline-editor": "^4.1.0",
    "@deckdeckgo/laser-pointer": "^1.1.0",
    "@deckdeckgo/lazy-img": "^3.1.0",
    "@deckdeckgo/markdown": "^2.1.0",
    "@deckdeckgo/math": "^2.1.0",
    "@deckdeckgo/qrcode": "^2.1.0",
    "@deckdeckgo/remote": "^2.2.0",
    "@deckdeckgo/reveal": "^2.1.0",

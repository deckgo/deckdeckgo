{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "node_modules/@deckdeckgo"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
